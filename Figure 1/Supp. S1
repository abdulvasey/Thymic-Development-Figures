
### Thymus Dotplot
library(Seurat)
library(tidyverse)

srt<-readRDS("tecsamps-horiz-new3000.1000.1000-100000.3MAD10.SCT.regressed.int.rds")

meta <-  read_csv("compiled_horizontal.csv")


srt@meta.data <- srt@meta.data %>% 
  rownames_to_column("barcode") %>% 
  select_at(vars(!contains("cellType"))) %>% 
  left_join(meta %>% dplyr::select(barcode, cellType)) %>% 
  mutate(tissue = case_when(
    samptype == "TEC" ~ "T",
    samptype == "EEC" ~ "E",
    samptype == "BEC" ~ "B",
    samptype == "LEC" ~ "L"
  )) %>% 
  mutate(group_label = str_glue("{cellType} {tissue}")) %>% 
  column_to_rownames("barcode")

srt <- SetIdent(srt, value = "cellType")
DefaultAssay(srt)<-"RNA"
DimPlot(srt, reduction="tsne")
srt<-subset(srt,idents = "Doublets",invert=TRUE)


gene<-c('EPCAM', 'PSMB11', 'CCL25', 'KRT8', 'TP63', 'CTGF', 'DLK2', 'KRT5', 'KRT14', 'CCL19', 'AIRE',"CLDN4", 'KRT1', 'POU2F3', 'NEUROD1', 'CHGA', 'MYOD1', 'CHRNA1', 'TRDC', 'PTPRC', 'CD3D', 'CD4', 'CD8A', 'CD8B', 'S100A9', 'RETN', 'LAMP3', 'PDGFRA', 'IGF2.1', 'COLEC11', 'ALDH1A2', 'FBN1', 'MKI67', 'LUM', 'PI16', 'PDGFRB',"ACTA2", 'AQP1','PECAM1', 'CDH5', 'PROX1', 'NRXN1')
ord<-c('mcTEC','cTEC', 'mTECI',"mTECII", 'mTECIII/IV', 'TECneuro', 'TECmyo', 'DN Thymocyte', 'SP/DP Thymocyte', 'Macrophage', 'Dendritic', 'Fibroblast 1', 'Fibroblast 1 Cycling', 'Fibroblast 2', 'VSMC', 'Vascular Endothelial', 'Lymphatic Endothelial', 'Neuronal')
srt@active.ident<-factor(srt@active.ident,levels = rev(ord))
DotPlot(srt, features = gene,assay = "RNA")+ scale_color_viridis_c(option = "rocket", direction = -1) + theme_minimal() +
  theme(axis.text.x = element_text(angle = 90, face = "bold", size = 10, hjust=1,vjust=0.5),axis.text.y = element_text(face = "bold", size = 10))+ggtitle('Thymus')

### Bronchus Dotplot
srt<-readRDS("becsamps-new3000.1000.1000-100000.3MAD10.SCT.regressed.int.rds")




srt@meta.data <- srt@meta.data %>% 
  rownames_to_column("barcode") %>% 
  select_at(vars(!contains("cellType"))) %>% 
  left_join(meta %>% dplyr::select(barcode, cellType)) %>% 
  mutate(tissue = case_when(
    samptype == "TEC" ~ "T",
    samptype == "EEC" ~ "E",
    samptype == "BEC" ~ "B",
    samptype == "LEC" ~ "L"
  )) %>% 
  mutate(group_label = str_glue("{cellType} {tissue}")) %>% 
  column_to_rownames("barcode")

srt <- SetIdent(srt, value = "cellType")
DefaultAssay(srt)<-"RNA"
DimPlot(srt, reduction="tsne")
srt<-subset(srt,idents = c("Doublets"),invert=TRUE)

unique(srt@active.ident)
ord<-c( 'Epithelial Basal','Club', 'Goblet', 'Submucosal Gland', 'Secretory','Multiciliated', 'Neuroendocrine','Bud Tip Progenitor','Myoepithelial', 'T Cell', 'B Cell','Macrophage', 'Fibroblast', 'VSMC', 'Smooth Muscle', 'Cartilage', 'Vascular Endothelial', 'Neuronal')
gene<-c('EPCAM','SOX9','KRT5', 'KRT15', 'TP63', 'KRT8',"IL33","DLK2",'SCGB1A1', 'BPIFA1', 'BPIFB1', 'MUC5B', 'LTF','SFTPB','SCGB3A2','FOXJ1', 'PIFO','CHGA','SFTPC', 'FGFR1', 'PTPRC', 'CD3', 'CD3D', 'MS4A1','S100A9',"RETN","CD14",'HLA-DRA', 'PDGFRA', 'FBN1', 'PDGFRB', 'ACTA2', 'DES', 'CNMD', 'AQP1','PECAM1', 'CDH5', 'NRXN1')
       
srt@active.ident<-factor(srt@active.ident,levels = rev(ord))

DotPlot(srt, features = gene,assay = "RNA")+ scale_color_viridis_c(option = "rocket", direction = -1) + theme_minimal() +
  theme(axis.text.x = element_text(angle = 90, face = "bold", size = 10, hjust=1,vjust=0.5),axis.text.y = element_text(face = "bold", size = 10))+ggtitle('Bronchus')

### Lung Dotplot

