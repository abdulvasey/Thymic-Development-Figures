srt@meta.data <- srt@meta.data %>% 
  rownames_to_column("barcode") %>% 
  select_at(vars(!contains("cellType"))) %>% 
  left_join(meta %>% dplyr::select(barcode, cellType)) %>% 
  mutate(tissue = case_when(
    samptype == "TEC" ~ "T",
    samptype == "EEC" ~ "E",
    samptype == "BEC" ~ "B",
    samptype == "LEC" ~ "L"
  )) %>% 
  mutate(group_label = str_glue("{cellType} {tissue}")) %>% 
  column_to_rownames("barcode")

srt <- SetIdent(srt, value = "cellType")
DefaultAssay(srt)<-"RNA"
DimPlot(srt, reduction="tsne")
srt<-subset(srt,idents = c("Doublets"),invert=TRUE)

ord<-c('Bud Tip Progenitor', 'Bud Tip Progenitor Adjacent', 'Multiciliated', 'Secretory Progenitor', 'Epithelial Basal', 'Neuroendocrine', 'T Cell', 'B Cell', 'Macrophage', 'Fibroblast', 'Mesothelial', 'VSMC', 'Smooth Muscle', 'Vascular Endothelial', 'Lymphatic Endothelial', 'Neuronal' )
gene<-c('SFTPC', 'EPCAM', 'SOX9', 'AGER', 'FOXJ1', 'PIFO', 'SCGB3A2', 'SFTPB', 'KRT5', 'KRT15', 'TP63', 'KRT8',"IL33","DLK2", 'CHGA', 'PTPRC', 'CD3', 'CD3D', 'MS4A1', 'HLA-DRA', 'S100A9', 'RETN', 'CD14', 'PDGFRA', 'FBN1', 'MSLN', 'ALDH1A2', 'PDGFRB', 'ACTA2', 'DES', 'AQP1','PECAM1', 'CDH5', 'PROX1', 'LYVE1', 'NRXN1')
srt@active.ident<-factor(srt@active.ident,levels = rev(ord))


DotPlot(srt, features = gene,assay = "RNA")+ scale_color_viridis_c(option = "rocket", direction = -1) + theme_minimal() +
  theme(axis.text.x = element_text(angle = 90, face = "bold", size = 10, hjust=1,vjust=0.5),axis.text.y = element_text(face = "bold", size = 10))+ggtitle('Lung')

### Esophagus Dotplot

srt<-readRDS("eecsamps-new3000.1000.1000-100000.3MAD10.SCT.regressed.int.rds")


srt@meta.data <- srt@meta.data %>% 
  rownames_to_column("barcode") %>% 
  select_at(vars(!contains("cellType"))) %>% 
  left_join(meta %>% dplyr::select(barcode, cellType)) %>% 
  mutate(tissue = case_when(
    samptype == "TEC" ~ "T",
    samptype == "EEC" ~ "E",
    samptype == "BEC" ~ "B",
    samptype == "LEC" ~ "L"
  )) %>% 
  mutate(group_label = str_glue("{cellType} {tissue}")) %>% 
  column_to_rownames("barcode")

srt <- SetIdent(srt, value = "cellType")
DefaultAssay(srt)<-"RNA"
DimPlot(srt, reduction="tsne")

ord<-c('Epithelial Basal', 'Suprabasal', 'Multiciliated', 'Gastric Epithelial', 'T Cell', 'Macrophage', 'Fibroblast', 'VSMC', 'Smooth Muscle', 'Vascular Endothelial', 'Neuronal')
gene<-c('EPCAM', 'KRT5', 'KRT15','DLK2', 'TP63', 'KRT8', 'KRT13', 'KRT4', 'CLDN4', 'FOXJ1', 'PIFO', 'TFF1', 'MUC5B', 'PTPRC', 'CD3D','S100A9','RETN', 'CD14', 'PDGFRA', 'IGF2.1', 'FBN1', 'LUM', 'PI16', 'PDGFRB', 'ACTA2', 'DES', "AQP1",'PECAM1', 'CDH5', 'NRXN1' )
srt@active.ident<-factor(srt@active.ident,levels = rev(ord))
#DimPlot(srt, reduction="tsne")
DotPlot(srt, features = gene,assay = "RNA")+ scale_color_viridis_c(option = "rocket", direction = -1) + theme_minimal() +
  theme(axis.text.x = element_text(angle = 90, face = "bold", size = 10, hjust=1,vjust=0.5),axis.text.y = element_text(face = "bold", size = 10))+ggtitle("Esophagus")





